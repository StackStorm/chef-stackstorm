[Unit]
Description=StackStorm action runner master service
After=st2actionrunner.service

[Service]
Type=simple
User=<%= @runas_user %>
Group=<%= @runas_group %>
ExecStart=<%= @python %> <%= @service_bin %> --config-file <%= @config_file %>
TimeoutSec=60
PrivateTmp=true
Restart=on-failure
RestartSec=5

[Install]
WantedBy=st2actionrunner.service
